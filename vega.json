{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "https://raw.githubusercontent.com/Maplub/AirQualityData/master/PM10_2018_daily.csv"
  },
  "title": "The average quantity of pm10 that can be detected",
  "width" : 400,
  "height" : 200,
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 20
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "time",
          "timeUnit": "date",
          "type": "temporal",
          "title": "Day",
          "axis": {
              "labelAngle": 0,
              "format": "%e"
          }
      },
      
      "y": {
          "field": "time",
          "timeUnit": "month",
          "type": "temporal",
          "title": "Month"
      },
      "color": { 
          "field": "pm10",
          "aggregate": "mean",
          "type": "quantitative",
          "legend": {
              "title": "PM10"
          }
      }
  }
}